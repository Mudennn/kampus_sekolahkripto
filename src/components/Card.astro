---
import img1 from "../images/tezos1.jpg";

interface Props {
  title: string;
  description: string;
  href: string;
  thumbnail: string;
}

const {title, description, href, thumbnail} = Astro.props as Props;
---

<div
  class="card cursor-pointer overflow-hidden bg-transparent bg-gray-300 bg-opacity-20 shadow-lg rounded-lg"
>
  <img
    src={thumbnail}
    class="w-full rounded-md object-cover aspect-square"
    alt="Solana KL"
  />
  <div class="p-5">
    <p class="mb-1 font-bold text-white tracking-wide uppercase line-clamp-2">
      {title}
    </p>
    <p class="mb-3 text-gray-400 text-sm line-clamp-2">
     {description}
    </p>
    <div class="flex items-center justify-start gap-2 mt-auto">
      <a
        class="group text-yellow-400 transition-all duration-300 ease-in-out"
        href={href}
      >
        <span
          class="flex items-center gap-2 bg-left-bottom bg-gradient-to-r from-yellow-400 to-yellow-400 bg-[length:0%_2px] bg-no-repeat group-hover:bg-[length:100%_2px] transition-all duration-500 ease-out"
        >
          Mula Belajar{" "}
          <span>
            <!-- <TbArrowUpRight />  -->
          </span>
        </span>
      </a>
    </div>
  </div>
</div>

