---
import MainLayout from "./MainLayout.astro";


interface Props {
  frontmatter: {
    title: string;
    slug: string;
    thumbnail: string;
    subheading: string;
    video: string;
    author: string;
    date: string;
  };
}

const { frontmatter } = Astro.props as Props;
---

<MainLayout title={frontmatter.title}>
  <div class="max-w-screen-md mx-auto mt-8">
    
      <h1 class="font-bold text-2xl text-white">{frontmatter.title}</h1>
      <div class="flex divide-x text-white">
        <div class="flex space-x-1 px-2">
          <p>{frontmatter.author}</p>
        </div>
        <div class="flex space-x-1 px-2">
          <p>{frontmatter.date}</p>
        </div>

      </div>
      <img src={frontmatter.thumbnail} alt={frontmatter.title} class="object-cover aspect-video my-8 rounded-md drop-shadow-lg " />
      <div class="containerVideo aspect-w-16 aspect-h-9">
        <iframe
          class="responsive-iframe"
          src={frontmatter.video}
          title="Pengenalan Blockchain"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          
        ></iframe>
      </div>
      <div class="mt-4 text-white">
      <slot />
    </div>
    <!-- <h2>Post author: {frontmatter.author}</h2> -->
    <!-- <p>{frontmatter.description}</p> -->
  </div>
</MainLayout>

<style is:global>

  p {
    @apply pt-4;
  }

   /* Responsive Video  */
   .containerVideo {
  position: relative;
  overflow: hidden;
  width: 100%;
  padding-top: 56.25%; /* 16:9 Aspect Ratio (divide 9 by 16 = 0.5625) */
}

/* Then style the iframe to fit in the container div with full height and width */
.responsive-iframe {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 100%;
}
</style>
