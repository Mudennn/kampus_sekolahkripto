---
import Card from "../components/Card.astro";
import { slugify } from "../js/utils";
import MainLayout from "../layouts/MainLayout.astro";

interface Frontmatter{
  title: string,
  slug: string,
  thumbnail: string,
  subheading: string,
  category: string,
}


const posts = await Astro.glob<Frontmatter>('./blog/*.md')
---

<MainLayout title="Blog">
  <div class="p-4">
    <h2 class="lg:text-3xl text-3xl font-bold text-center text-white">Blog</h2>
    <h3 class="text-sm lg:text-base py-2 text-center text-gray-400 mt-2">
      Pilih laluan anda untuk mempelajari asas web3!
    </>
  </div>
  
  <div class=" px-4 mx-auto max-w-7xl sm:px-6 md:px-12 lg:px-24">
    <div class="px-4 py-8 mx-2 sm:mx-auto max-w-7xl lg:py-18">
      <div
        class="grid gap-8 lg:grid-cols-3 sm:max-w-sm sm:mx-auto lg:max-w-full"
      > 
       {posts.map((post) => (
      <Card
          title={post.frontmatter.title}
          subheading={post.frontmatter.subheading}  
          href={post.url}
          thumbnail={post.frontmatter.thumbnail}
        />
      ))} 
      
        
    
    </div>
  </div>

  <!-- baru tukar - category  -->
   <!-- category={`/module/${slugify(post.frontmatter.category)}`}  -->

</MainLayout>


